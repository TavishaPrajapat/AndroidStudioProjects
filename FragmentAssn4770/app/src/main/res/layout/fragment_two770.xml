<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:columnCount="2"
        android:rowCount="3"
        android:gravity="center"
        android:layout_gravity="center"
        android:columnOrderPreserved="false">

        <!-- Title or Header for Clarity -->
        <TextView
            android:id="@+id/header770"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends Gallery"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000B58"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp" />

        <!-- First Friend Image and Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">
            <ImageView
                android:id="@+id/image_friend1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:contentDescription="Friend Image 1"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/name_friend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Simer"
                android:textSize="18sp"
                android:textColor="#000B58"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Second Friend Image and Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">
            <ImageView
                android:id="@+id/image_friend2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:contentDescription="Friend Image 2"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/name_friend2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanmay"
                android:textSize="18sp"
                android:textColor="#000B58"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Third Friend Image and Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">
            <ImageView
                android:id="@+id/image_friend3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:contentDescription="Friend Image 3"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/name_friend3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Suhani"
                android:textSize="18sp"
                android:textColor="#000B58"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Fourth Friend Image and Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_friend4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:contentDescription="Friend Image 4"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/name_friend4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Ajay"
                android:textSize="18sp"
                android:textColor="#000B58"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Button to Show Toast -->
        <Button
            android:id="@+id/second_btn770"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Toast"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:textColor="#FFF4B7"
            android:backgroundTint="#000B58"
            android:textSize="16sp" />
    </GridLayout>
</FrameLayout>