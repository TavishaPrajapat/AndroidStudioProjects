<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9B7EBD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header770"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Friends List"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#F3F3E0"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/icon770"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon"
        app:layout_constraintTop_toBottomOf="@+id/header770"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listview770"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="#9B7EBD"
        android:dividerHeight="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon770" />

</androidx.constraintlayout.widget.ConstraintLayout>
